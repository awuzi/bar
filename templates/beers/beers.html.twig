{% extends 'base.html.twig' %}

{% block title %}Hello BarController!{% endblock %}

{% block body %}

    {% for beer in beers %}
        <div class="mt-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ beer.name }}</h5>
                    <p class="card-text">{{ beer.degree }}</p>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}
